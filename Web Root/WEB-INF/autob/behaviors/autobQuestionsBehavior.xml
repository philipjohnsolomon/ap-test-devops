        <for>*/AUTOBquestionnaire/AUTOBuwQuestions/Inmrc14Exp</for>
    </behavior>

    <behavior title="Include explanation for question AUTOB 08 if answered YES">
        <description>Are any drivers not covered by Worker's Compensation?</description>
        <do action="include" />
        <where>
            <preCondition name="Autob08">YES</preCondition>
        </where>
        <for>*/AUTOBquestionnaire/AUTOBuwQuestions/Autob08Exp</for>
    </behavior>

    <behavior title="Include explanation for question AUTOB 03 if answered YES">
        <description>Any vehicles owned but not scheduled on this application?</description>
        <do action="include" />
        <where>
            <preCondition name="Autob03">YES</preCondition>
        </where>
        <for>*/AUTOBquestionnaire/AUTOBuwQuestions/Autob03Exp</for>
    </behavior>

    <behavior title="Include explanation for question AUTOB 09 if answered YES">
        <description>Any drivers with convictions for moving traffic violations?</description>
        <do action="include" />
        <where>
            <preCondition name="Autob09">YES</preCondition>
        </where>
        <for>*/AUTOBquestionnaire/AUTOBuwQuestions/Autob09Exp</for>
    </behavior>

    <behavior title="Include explanation for question AUTOB 12 if answered YES">
        <description>Has agent inspected vehicles?</description>
        <do action="include" />
        <where>
            <preCondition name="Autob12">YES</preCondition>
        </where>
        <for>*/AUTOBquestionnaire/AUTOBuwQuestions/Autob12Exp</for>
    </behavior>

</transactionDefinitionBehavior>
